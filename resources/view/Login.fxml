<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox alignment="CENTER" prefHeight="200.0" prefWidth="300.0" spacing="10.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gudang.controller.LoginController">
   <children>
      <Label alignment="TOP_CENTER" contentDisplay="CENTER" text="Login Aplikasi Gudang">
         <font>
            <Font size="13.0" />
         </font>
      </Label>
      <TextField fx:id="txtUser" promptText="Username" />
      <PasswordField fx:id="txtPass" promptText="Password" />
      <Button mnemonicParsing="false" onAction="#loginAction" text="Login" />
      <Label fx:id="lblStatus" />
   </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
</VBox>
